<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.social2023Network.fragments.FragmentHome"
        android:label="FragmentHome" >
        <action
            android:id="@+id/action_fragmentHome_to_fragmentMessages"
            app:destination="@id/message_fragment" />
        <action
            android:id="@+id/action_home_fragment_to_profile_fragment"
            app:destination="@id/profile_fragment" />
    </fragment>

    <fragment
        android:id="@+id/message_fragment"
        android:name="com.social2023Network.fragments.FragmentMessages"
        android:label="FragmentMessages" >
        <action
            android:id="@+id/action_fragmentMessages_to_fragmentProfile"
            app:destination="@id/profile_fragment" />
        <action
            android:id="@+id/action_fragmentMessages_to_fragmentHome"
            app:destination="@id/home_fragment" />
    </fragment>

    <fragment
        android:id="@+id/profile_fragment"
        android:name="com.social2023Network.fragments.FragmentProfile"
        android:label="FragmentProfile" >
        <action
            android:id="@+id/action_fragmentProfile_to_fragmentMessages"
            app:destination="@id/message_fragment" />
        <action
            android:id="@+id/action_fragmentProfile_to_fragmentHome"
            app:destination="@id/home_fragment" />
    </fragment>

</navigation>